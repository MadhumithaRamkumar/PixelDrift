
@{
    ViewBag.Title = "DownloadImage";
}

<h2>Download Photo Page</h2>



<ul style="list-style-type:none;padding:0;">

    @foreach (var item in Model)
    {
        //if (@Model != null)
        <li>
            <br />
            <img src="@item" alt="ïmage" width="100" height="100" />
            <a id="@item" href="#" onclick="deleteImage('@item');">Download</a>

        </li>

    }

</ul>


<br />

<div class="form-group">
    <div class="col-sm-4">
        <button type="submit" class="btn btn-default" onClick="history.go(-1); return false;">Home</button>
    </div>
</div>

<script>
    function deleteImage
        (item) {
        var url = "/Home/Download";
        $.post(url, { Name: item }, function (data) {
            window.location.href = "/Home/DownloadImage";
            alert(data);
        });
    }
</script>




